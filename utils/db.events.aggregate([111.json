db.events.aggregate([
    {
      $match: {
        "Values.Site Code": {
          $in: [
            "001"
          ]
        }
      }
    },
    {
      $lookup: {
        from: "geofences",
        let: {
          site_code: "$Values.Site Code",
          region_ids: [
            1
          ]
        },
        pipeline: [
          {
            $match: {
              $expr: {
                $or: [
                  {
                    $eq: [
                      "$code",
                      "$$site_code"
                    ]
                  },
                  {
                    $in: [
                      "$region_id",
                      "$$region_ids"
                    ]
                  }
                ]
              }
            }
          }
        ],
        as: "geofence",
        
      }
    },
    {
      $unwind: "$geofence"
    },
    {
      $lookup: {
        from: "regions",
        localField: "geofence.region_id",
        foreignField: "_id",
        as: "region",
        
      }
    },
    {
      $lookup: {
        from: "clusters",
        localField: "geofence.cluster_id",
        foreignField: "_id",
        as: "cluster",
        
      }
    },
    {
      $unwind: {
        path: "$region",
        preserveNullAndEmptyArrays: true
      }
    },
    {
      $unwind: {
        path: "$cluster",
        preserveNullAndEmptyArrays: true
      }
    },
    {
      $project: {
        "region._id": 0,
        "cluster._id": 0,
        "geofence.region_id": 0,
        "geofence.cluster_id": 0,
        
      }
    }
  ])